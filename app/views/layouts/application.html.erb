<!DOCTYPE html>
<html>
  <head>
    <title>Vapos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>"
        }
      </script>
    <% else %>
      <script>
        window.currentUser = undefined
      </script>
    <% end %>

    <script type="text/javascript">
      window.vaposLogo = "<%= image_url('ui/logo_vapos.png') %>";
      window.leftButton = "<%= image_url('ui/left_arrow.png') %>";
      window.rightButton = "<%= image_url('ui/right_arrow.png') %>";
    </script>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
